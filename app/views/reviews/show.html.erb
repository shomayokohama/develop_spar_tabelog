<div class="row">
  <div class="col-lg-12">
    <h1>レビュー詳細</h1>
    <dl>
      <dt>点数</dt>
      <dd><%= @review.rate %></dd>
      <dt>レビュー</dt>
      <dd><%= @review.body %></dd>
    </dl>
  </div>
</div>

<hr />

<div class="row">
  <div class="col-lg-12">
    <%= form_for(@review, url: { controller: :review, action: :create }) do |f| %>
      <div class="form-group">
        <%= f.label :rate , '点数（１〜５店満点）' %><br>
        <%= f.text_area :rate, class: "form-control" %>
        <%= f.label :body , 'レビュー（感想を投稿してください。）' %><br>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.hidden_field :restaurant_id, value: @review.id %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
